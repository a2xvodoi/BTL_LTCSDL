@model PagedList.IPagedList<layout.Models.DonHang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "DonHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    ĐƠN HÀNG
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        ĐƠN HÀNG
        <span class="float-right">

            <ul class="navbar-nav ml-auto ml-md-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="Dropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sắp xếp theo</a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="@Url.Action("DonHang","Home", new { order = "descname"})">Ngày đặt hàng gần nhất</a>
                        <a class="dropdown-item" href="@Url.Action("DonHang","Home", new { order = "ascname"})">Ngày đặt hàng cũ nhất</a>

                    </div>
                </li>
            </ul>
        </span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Người nhận</th>
                        <th>Địa chỉ nhận</th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(itemModel => item.MaDH)</td>
                            <td>@Html.DisplayFor(itemModel => item.NgayDatHang)</td>
                            <td>@Html.DisplayFor(itemModel => item.NguoiNhan)</td>
                            <td>@Html.DisplayFor(itemModel => item.DiaChiNhan)</td>
                            
                            
                            <td>
                                <a href="#" class="btn btn-link" role="button">Chỉnh sửa</a>
                                <a href="#" class="btn btn-link" role="button">Xóa</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
Trang @(Model.PageCount<Model.PageNumber? 0:Model.PageNumber)/@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("DonHang", new { page, order = ViewBag.sort }))
