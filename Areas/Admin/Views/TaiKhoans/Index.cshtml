@model PagedList.IPagedList<layout.Models.TaiKhoan>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<div class="card-header">
    <i class="fas fa-table mr-1"></i>
    TÀI KHOẢN

    <span class="float-right">

        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="Dropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sắp xếp theo</a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="@Url.Action("Index","Hangs", new { order = "descname"})">Tên thành viên giảm</a>
                    <a class="dropdown-item" href="@Url.Action("Index","Hangs", new { order = "ascname"})">Tên thành viên tăng</a>

                </div>
            </li>
        </ul>
    </span>
</div>

<table class="table table-responsive">
    <tr>
        <th>
            Tên đăng nhập
        </th>
        <th>
            Mật khẩu
        </th>
        <th>
            Tên thành viên
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Tỉnh
        </th>
        <th>
            Huyện
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Trạng thái
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenDangNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Huyen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaTK }) <br /><hr />
                @Html.ActionLink("Khóa tài khoản", "Lockout", new { id = item.MaTK }) <br /><hr />
                @Html.ActionLink("Xóa tài khoản", "Delete", new { id = item.MaTK })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount<Model.PageNumber? 0:Model.PageNumber)/@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, order = ViewBag.sort }))